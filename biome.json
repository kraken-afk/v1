{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["dist", "node_modules", ".astro"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"ignore": ["dist", "node_modules", ".astro"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": ["dist", "node_modules", ".astro"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"lineWidth": 80,
			"indentWidth": 2,
			"indentStyle": "space",
			"jsxQuoteStyle": "double"
		}
	},
	"overrides": [
		{
			"include": ["*.astro"],
			"linter": {
				"rules": {
					"style": {
						"useConst": "off",
						"useImportType": "off"
					}
				}
			}
		}
	]
}
