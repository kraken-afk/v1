{
	"$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["**", "!**/dist", "!**/node_modules"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"includes": ["**", "!**/dist", "!**/node_modules"]
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"includes": ["**", "!**/dist", "!**/node_modules"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"lineWidth": 80,
			"indentWidth": 2,
			"indentStyle": "space",
			"jsxQuoteStyle": "double"
		}
	},
	"overrides": [
		{
			"includes": ["**/*.astro"]
		}
	]
}
